@{
    ViewData["Title"] = "Home Page";
}

<form action="/Home/SinavOlustur" method="post">
        <div class="form-group m-form__group ">
            @if (ViewBag.RSS != null)
            {
                int i = 0;
                <div class="col-sm-12">
                    <label>Yazı</label>
                    <select id="description" name="description" class="form-control selectpicker" onchange="soruOlustur(this)" >
                        <option id="" value="">Seçiniz</option>
                        @foreach (var item in ViewBag.RSS)
                        {
                            if (i < 5)
                            {
                              
                                <option value="@item.description">@item.title</option>
                                i++;
                            }
                            else break;
                        }
                    </select>
                </div>
            }
            <div class="form-group m-form__group ">
                <div id="ModalBody" class="modal-body ">
                </div>
                <div id="ModalBody2" class="modal-body ">
                </div>
            </div>

            <div class="sinavbuton">
                <button id="submitbutton"  type="submit">Sınavı Oluştur.</button>
            </div>

        </div>
</form>

        @section Scripts {
            <script>
                
                function soruOlustur(target) {
                    var description = $(target).val();                  
                    var text = "";
